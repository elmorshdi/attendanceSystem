<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorPrimaryDark"

    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:contentDescription="@string/discription"
            android:src="@drawable/aaaaa" />
    </RelativeLayout>
    zz
    <GridLayout
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_weight="6">

        <!--Row 1-->
        <!--Col 1-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/zxing_transparent"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            app:cardElevation="8dp"
            android:onClick="record"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Image1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/attendace"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/tvid1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/tacke_attendance"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Col 2-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:backgroundTint="@color/zxing_transparent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            app:cardElevation="8dp"
            android:onClick="goAddSub"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Image2"
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/addstudent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/add_course"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Row 2-->
        <!--Col 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="8dp"
            android:onClick="myAccount"
            android:backgroundTint="@color/zxing_transparent"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Image3"
                    android:layout_width="142dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/student"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/tvid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/my_account"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--Col 2-->

        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            app:cardElevation="8dp"
            android:onClick="getAttend"
            android:backgroundTint="@color/zxing_transparent"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:id="@+id/Image4"
                    android:src="@drawable/notes"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvid4"
                    android:text="@string/view_attendance"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Row 3-->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/zxing_transparent"
            android:onClick="message"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Image6"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/messagesico"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/tvid6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/get_apologies"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!--Col 1-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="14dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/zxing_transparent"
            android:onClick="signOut"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/Image5"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_input_black_24dp"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:id="@+id/tvid5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/sign_out"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>

</LinearLayout>